<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WidthWrapHeightWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthMatchHeightWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthMatchHeightMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="Tv12MarginLeft10" parent="WidthWrapHeightWrap">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
    </style>

    <style name="Tv12MarginLeft10Black" parent="Tv12MarginLeft10">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Tv12ML10BlackLine2" parent="Tv12MarginLeft10">
        <item name="android:maxLines">2</item>
    </style>

    <style name="Tv12MarginLeft10DarkGray" parent="Tv12MarginLeft10">
        <item name="android:textColor">@color/color_dark_grey</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

</resources>
